{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "todelovers",
	"scopeName": "source.todelovers",
	"patterns": [
		{
			"include": "#expression"
		}
	],
	"repository": {
		"expression": {
			"patterns": [
				{ "include": "#global" },
				{ "include": "#blocks" }
			]
		},
		"global": {
			"patterns": [
				{ "include": "#__global__strings" },
				{ "include": "#__global__numerics" }
			]
		},
		"__global__strings": {
			"begin": "\"",
			"end": "\"",
			"name": "string.quoted.double.todelovers",
			"patterns": [
				{
					"match": "\\\\."
				}
			]
		},
		"__global__numerics": {
			"match": "\\b[0-9]+\\b",
			"name": "constant.numeric.todelovers"
		},
		"blocks": {
			"begin": "\\(",
			"end": "\\)",
			"name": "entity.name.function.todelovers",
			"patterns": [
				{ "include": "#__global__numerics" },
				{ "include": "#__global__strings" },
				{ "include": "#__blocks__variables" },
				{ "include": "#__blocks__keywords" },
				{ "include": "#__blocks__methods" },
				{ "include": "#__blocks__type" }
			]
		},
		"__blocks__variables": {
			"match": "\\b(bool#|string#|number#)\\b([^\\s]*)\\b",
			"captures": {
				"1": {
					"name": "support.type.todelovers"
				},
				"2": {
					"name": "keyword.todelovers"
				}
			}
		},
		"__blocks__keywords": {
			"match": "\\b(tode-broadcast|def-todelovers|functions|def-func|main-frank|public|private)\\b",
			"captures": {
				"1": {
					"name": "keyword.todelovers"
				}
			}
		},
		"__blocks__methods": {
			"match": "\\b(nando-talk|add)\\b(.[^\\)]*)",
			"captures": {
				"1": {
					"name": "keyword.control.todelovers"
				},
				"2": {
					"patterns": [
						{ "include": "#__global__strings" },
						{ "include": "#__global__numerics" },
						{
							"match": ".",
							"name": "variable.parameter"
						}
					]
				}
			}
		},
		"__blocks__type": {
			"match": "\\b(type)\\b([^\\s]*)",
			"captures": {
				"1": {
					"name": "entity.name.type.todelovers"
				},
				"2": {
					"name": "variable.todelovers"
				}
			}
		}
	}
}