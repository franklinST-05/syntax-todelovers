{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "todelovers",
	"scopeName": "source.todelovers",
	"patterns": [
		{ "include": "#__define__" }
	],
	"repository": {
		"__define__": {
			"patterns": [
				{ "include": "#strings" },
				{ "include": "#numerics" },
				{ "include": "#keywords" },
				{ "include": "#variable" },
				{ "include": "#methods" },
				{ "include": "#block-function" },
				{ "include": "#ret_variable" }
			]
		},
		"strings": {
			"begin": "\"",
			"end": "\"",
			"name": "string.quoted.double.todelovers",
			"patterns": [
				{
					"match": "\\\\."
				}
			]
		},
		"numerics": {
			"match": "\\b[0-9]+\\b",
			"name": "constant.numeric.todelovers"
		},
		"keywords": {
			"match": "\\b(tode-broadcast|def-todelovers|functions|main-frank|public|private)\\b",
			"name": "keyword.todelovers"
		},
		"variable": {
			"match": "\\b(int|string)(::)\\b([a-zA-Z0-9]*)\\b",
			"captures": {
				"1": {
					"name": "support.type.todelovers"
				},
				"2": {
					"name": "support.type.todelovers"
				},
				"3": {
					"name": "keyword.todelovers"
				}
			}
		},
		"ret_variable": {
			"match": "(::)\\b(int|string)\\b",
			"captures": {
				"1": {
					"name": "support.type.todelovers"
				},
				"2": {
					"name": "support.type.todelovers"
				}
			}
		},
		"methods": {
			"match": "\\b(nando-talk|add|set)\\b(.[^\\)]*)",
			"captures": {
				"1": {
					"name": "keyword.control.todelovers"
				},
				"2": {
					"patterns": [
						{ "include": "#strings" },
						{ "include": "#numerics" },
						{ "include": "#variable" },
						{
							"match": ".",
							"name": "variable.parameter"
						}
					]
				}
			}
		},
		"block-function": {
			"match": "\\b(def-func)\\b\\b(.[^\\->]*)",
			"captures": {
				"1": {
					"name": "keyword.todelovers"
				},
				"2": {
					"name": "entity.name.function"
				}
			}
		}
	}
}